<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Coupon List</title>

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
    }

    header {
      background-color: #3c271f; 
      color: #ffffff; 
      padding: 10px;
      text-align: center;
    }

    table {
      width: 97%;
      border-collapse: collapse;
      margin-top: 20px;
      margin-left: 20px;
    }

    th, td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: left;
    }

    th {
      background-color: #3c271f;
      color: #ffffff;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    a {
      text-decoration: none;
      color: #3c271f;
      margin-top: 10px;
      display: inline-block;
      padding: 8px 16px;
      background-color: #ffffff;
      border: 1px solid #3c271f;
      border-radius: 4px;
      transition: background-color 0.3s, color 0.3s;
    }
    button{
        text-decoration: none;
      color: #3c271f;
      margin-top: 10px;
      display: inline-block;
      padding: 8px 16px;
      background-color: #ffffff;
      border: 1px solid #3c271f;
      border-radius: 4px;
      transition: background-color 0.3s, color 0.3s;

    }
    button:hover{
        color: #ffffff;
      background-color: #3c271f;

    }

    a:hover {
      color: #ffffff;
      background-color: #3c271f;
    }
  </style>
</head>
<body>

  <h2 style="text-align: center;">Coupon List</h2>
  
  <!-- Display list of coupons -->
  <table>
    <thead>
      <tr>
        <th>Coupon Code</th>
        <th>Description</th>
        <th>Min Purchase Amount</th>
        <th>Discount Amount</th>
        <th>Start Date</th>
        <th>Expiry Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% coupons.forEach(coupon => { %>
        <tr>
          <td><%= coupon.couponCode %></td>
          <td><%= coupon.description %></td>
          <td><%= coupon.minPurchaseAmount %></td>
          <td><%= coupon.discountAmount %></td>
          <td><%= coupon.startDate %></td>
          <td><%= coupon.expiryDate %></td>
          <td>
            <a href="/edit-coupon/<%= coupon._id %>">Edit</a>
            <form action="/coupons/<%= coupon._id %>?_method=DELETE" method="post">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  
  <!-- Link to create a new coupon -->
  <div style="text-align: center;">
    <a href="/coupons/create">Create New Coupon</a>
  </div>

</body>
</html>
