<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="https://image.ibb.co/n5gUtm/icon_1.png"
    />
    <title>Coupon List</title>

    <style>
      body {
        font-family: "Roboto", sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      header {
        background-color: green;
        color: #ffffff;
        padding: 10px;
        text-align: center;
      }

      table {
        width: 97%;
        border-collapse: collapse;
        margin-top: 20px;
        margin-left: 20px;
      }

      th,
      td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
      }

      th {
       
        color: black;
      }

      tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      a {
        text-decoration: none;
        color: white;
        margin-top: 10px;
        display: inline-block;
        padding: 8px 16px;
        background-color: #45a049;
        border: 1px solid white;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;
      }
      button {
        text-decoration: none;
        color: white;
        margin-top: 10px;
        display: inline-block;
        padding: 8px 16px;
        background-color: #45a049;
        border: 1px solid white;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;
      }
      button:hover {
        color: #ffffff;
        background-color: #388e3c;;
      }

      a:hover {
        color: #ffffff;
        background-color:  #388e3c;;
      }
      .home {
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-bottom: 20px;
        border: 1px solid white;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;
        color: white;
        background-color:  #45a049;
      }
      .home:hover {
        color: #ffffff;
        background-color: #388e3c;
      }
      #delete{
        text-decoration: none;
        color: white;
        margin-top: 10px;
        display: inline-block;
        padding: 8px 16px;
        background-color: red;
        border: 1px solid white;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;

      }
      #delete:hover {
        color: #ffffff;
        background-color:  #ff5555;;
      }
    </style>
  </head>
  <body>
    <h2 style="text-align: center">Coupon List</h2>
    <a class="home" href="/adhome">Home</a>
    <!-- Link to create a new coupon -->
    <div style="text-align: center">
      <a href="/coupons/create">Create New Coupon</a>
    </div>
    <div class="search-container">
      <input type="text" id="searchInput" placeholder="Search coupon" />
      <button onclick="searchCoupon()">Search</button>
    </div>

    <!-- Display list of coupons -->
    <table>
      <thead>
        <tr>
          <th>Coupon Code</th>
          <th>Description</th>
          <th>Min Purchase Amount</th>
          <th>Discount Amount</th>
          <th>Start Date</th>
          <th>Expiry Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% coupons.forEach(coupon => { %>
        <tr>
          <td><%= coupon.couponCode %></td>
          <td><%= coupon.description %></td>
          <td><%= coupon.minPurchaseAmount %></td>
          <td><%= coupon.discountAmount %></td>
          <td><%= coupon.startDate %></td>
          <td><%= coupon.expiryDate %></td>
          <td>
            <a href="/edit-coupon/<%= coupon._id %>">Edit</a>

            <button id="delete" onclick="deletecoupon(`<%= coupon._id %>`)" type="submit">
              Delete
            </button>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <div class="pagination">
      <a
        href="?page=<%= currentPage - 1 %>"
        class="<%= currentPage === 1 ? 'disabled' : '' %>"
        >Previous</a
      >
      <% for (let i = 1; i <= 3; i++) { %>
      <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"
        ><%= i %></a
      >
      <% } %>
      <a
        href="?page=<%= currentPage + 1 %>"
        class="<%= currentPage === totalPages ? 'disabled' : '' %>"
        >Next</a
      >
    </div>
  </body>
  <script>
    function searchCoupon() {
      const searchQuery = document.getElementById("searchInput").value;
      const url = `/admin/coupon?page=1&search=${encodeURIComponent(
        searchQuery
      )}`;
      window.location.href = url;
    }
    function deletecoupon(couponId) {
      if (confirm(`Are you sure you want to delete the coupon`)) {
        fetch(`/delete-coupons/${couponId}`, {
          method: "DELETE",
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              alert(`coupon deleted successfully`);
              window.location.reload();
            } else {
              alert("Error deleting coupon. Please try again.");
            }
          })
          .catch((error) => {
            console.error("Error:", error);
            alert("An error occurred. Please try again.");
          });
      }
    }
  </script>
</html>
