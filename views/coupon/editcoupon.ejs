<script>
    function editCoupon() {
      const form = document.getElementById('editCouponForm');
      const formData = new FormData(form);
  
      if (!validateForm(formData)) {
        alert('Please fill in all required fields with correct values.');
        return;
      }
  
      const startDateString = formData.get('startDate');
      const expiryDateString = formData.get('expiryDate');
      
      const startDate = new Date(startDateString);
      const currentDate = new Date();
      currentDate.setHours(0, 0, 0, 0);
  
      if (startDate < currentDate) {
        alert('Start Date cannot be set to today or a date before today.');
        return;
      }
  
      const expiryDate = new Date(expiryDateString);
      expiryDate.setHours(0, 0, 0, 0);
  
      if (expiryDate < currentDate) {
        alert('Expiry Date cannot be set to today or a date before today.');
        return;
      }
  
      const jsonObject = {};
      formData.forEach((value, key) => {
        jsonObject[key] = value;
      });
  
      const jsonData = JSON.stringify(jsonObject);
  
      fetch('/admin/edit-coupon/<%= coupon._id %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: jsonData,
      })
      .then(response => response.json())
      .then(data => {
  if (data.success) {
    alert('Coupon edited successfully!');
    // Additional logic if needed, e.g., access data.updatedCoupon
    window.location.href = '/admin/coupon';
  } else {
    alert('Failed to edit coupon. ' + data.message);
  }
})

    }
  
    function validateForm(formData) {
      const requiredFields = ['couponCode', 'description', 'minPurchaseAmount', 'discountAmount', 'startDate', 'expiryDate'];
  
      for (const field of requiredFields) {
        const value = formData.get(field);
  
        if (!value) {
          return false;
        }
  
        if ((field === 'minPurchaseAmount' || field === 'discountAmount') && parseFloat(value) <= 0) {
          return false;
        }
      }
  
      return true;
    }
  </script>
