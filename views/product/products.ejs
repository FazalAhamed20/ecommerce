<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="https://image.ibb.co/n5gUtm/icon_1.png"/>
    <title>Product List</title>
    <style>
        body {
            background-size: cover;
            margin: 0;
            font-family: Arial, sans-serif;
           
        }

        h1 {
            position: relative;
            z-index: 1;
            text-align: center;
            padding: 20px;
            color: black;
            animation: fadeInUp 1s ease-out;
        }

        .action-buttons {
            margin-top: 20px;
            text-align: center;
            animation: fadeInUp 1s ease-out;
        }

        .add-product-button,
        .edit-button,
        .delete-button {
            padding: 8px;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 8px;
        }

        .add-product-button {
            background-color: #45a049;
            color: black;
            text-decoration: none;
            border: none;
        }

        .edit-button {
            background-color: green;
            color: white;
            border: none;
            text-decoration: none;
        }

        .delete-button {
            background-color: red;
            color: white;
            border: none;
            text-decoration: none;
        }

        table {
            width: 98%;
            border-collapse: collapse;
            margin-top: 20px;
            margin-left: 10px;
            margin-right: 50px;
        }

        th,
        td {
            border: 1px solid black;
            color: black;
            padding: 8px;
            text-align: left;
        }

        a {
            color: white;
            background-color: #45a049;
        }

        a:hover {
            color: white;
        }
        @media only screen and (max-width: 768px) {
            table {
                border-collapse: collapse;
                width: 100%;
                margin: 10px;
            }

            th,
            td {
                border: 1px solid black;
                padding: 8px;
                text-align: left;
                width: 100%;
                display: block;
            }

            td.description {
                max-width: 100%;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            th,
            td:before {
                display: none;
            }
        }
@keyframes fadeIn {
    to {
        opacity: 1;
    }
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.pagination {
    margin-top: 20px;
    text-align: center;
}

.pagination a {
    display: inline-block;
    padding: 8px 16px;
    text-decoration: none;
    color: black;
    border: 1px solid #45a049;
    margin: 0 4px;
    border-radius: 4px;
}

.pagination a.active {
    background-color: #45a049;
    color: white;
}

.pagination a:hover {
    background-color: #45a049;
    color: white;
}

.pagination .disabled a {
    pointer-events: none;
    cursor: default;
    color: #ccc;
}

.pagination .disabled a:hover {
    background-color: transparent;
}
.search-container {
    text-align: center;
    margin-bottom: 20px;
}
.search-input {
    padding: 10px;
    border-radius: 4px;
    border: 1px solid #ccc;
    width: 300px;
    font-size: 14px;
}
button {
    padding: 10px;
    border-radius: 4px;
    cursor: pointer;
    margin-left: 8px;
    background-color: #45a049;
    color: white;
    border: none;
    font-size: 14px;
}
.search-input:hover,
.search-input:focus {
    border-color: #45a049;
}
button:hover,
.button:focus {
    background-color: #388e3c;
}
    </style>
</head>
<body>
    <div id="background-animation"></div>
    <h1>Product List</h1>
    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search products">
        <button onclick="searchProducts()">Search</button>
    </div>
    <div class="action-buttons">
        <a href="/adhome" class="add-product-button">Home</a>
        <a href="/addform" class="add-product-button">Add Product</a>
    </div>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Ingredients</th>
                <th>Image</th>
                <th>Price</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td style="width: 20%;" class="description"><%= product.description %></td>
                    <td ><%= product.ingredients %></td>
                    <td>
                        <img src="/product-images/<%= product.image || 'default-image.jpg' %>"
                             alt="<%= product.name %>" 
                             style="max-width: 50px; max-height: 50px;">
                    </td>
                    <td>â‚¹<%= product.price %></td>
                    <td>
                        <% if (product.category && product.category.name) { %>
                            <%= product.category.name %>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>
                    <td><%= product.quantity || 0 %></td>
                    <td>
                        <a href="/product/editform/<%= product._id %>" class="edit-button">Edit</a>
                        <a href="/product/deleteproduct/<%= product._id %>" class="delete-button" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div class="pagination">
        <a href="?page=<%= currentPage - 1 %>" class="<%= currentPage === 1 ? 'disabled' : '' %>">Previous</a>
        <% for (let i = 1; i <= 3; i++) { %>
            <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>
        <a href="?page=<%= currentPage + 1 %>" class="<%= currentPage === totalPages ? 'disabled' : '' %>">Next</a>
    </div>
    
</body>
<script>
    function searchProducts() {
        const searchQuery = document.getElementById('searchInput').value;
        const url = `/product?page=1&search=${encodeURIComponent(searchQuery)}`;
        window.location.href = url;
    }
</script>
</html>
