            border: none;
            text-decoration: none;
        }

        table {
            width: 98%;
            border-collapse: collapse;
            margin-top: 20px;
            margin-left: 10px;
            margin-right: 50px;
        }

        th,
        td {
            border: 1px solid black;
            color: black;
            padding: 8px;
            text-align: left;
        }

        a {
            color: white;
            background-color: #45a049;
        }

        a:hover {
            color: white;
        }

        @media only screen and (max-width: 768px) {
            table {
                border-collapse: collapse;
                width: 100%;
                margin: 10px;
            }

            th,
            td {
                border: 1px solid black;
                padding: 8px;
                text-align: left;
                width: 100%;
                display: block;
            }

            td.description {
                max-width: 100%;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            th,
            td:before {
                display: none;
            }
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .pagination {
    margin-top: 20px;
    text-align: center;
    margin-left: 38%;
}

.pagination a {
    display: inline-block;
    padding: 8px 16px;
    text-decoration: none;
    color: black;
    border: 1px solid #45a049;
    margin: 0 4px;
    border-radius: 4px;
}

.pagination a.active {
    background-color: #45a049;
    color: white;
}

.pagination a:hover {
    background-color: #45a049;
    color: white;
}

.pagination .disabled a {
    pointer-events: none;
    cursor: default;
    color: #ccc;
}

.pagination .disabled a:hover {
    background-color: transparent;
}
.modal {
            display: none;
            position: fixed;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            text-align: center;
        }

        .modal-content {
            margin-top: 20px;
        }

        .close {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
        }

        /* Animation for the modal */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Apply animation to the modal */
        .modal {
            animation: fadeIn 0.3s ease-in-out;
        }

        /* Button styles */
        #confirmBtn {
            padding: 10px 20px;
            background-color: #4caf50;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        #confirmBtn:hover {
            background-color: #45a049;
        }

@media only screen and (max-width: 768px) {
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
    }
}

    </style>
</head>
<body>
    <h1>Admin Orders</h1>
    <a href="/adhome">Home</a>
  <!-- Add this modal code before the closing </body> tag -->

  
  
        <!-- Your table code goes here -->
    
    
        
            <% orders.forEach(order => { %>
                <div id="confirmationModal" class="modal">
                    <div class="modal-content">
                        <span class="close" onclick="closeModal()">&times;</span>
                        <p>Are you sure you want to update the order status?</p>
                        <button id="confirmBtn">Confirm</button>
                    </div>
                </div>
                <table class="order-table">
                    <form action="/updateOrderStatus" method="POST" id="orderStatusForm">
                    <thead>
                        <tr>
                            <th colspan="2">Order ID: <%= order.orderID %></th>
                            <th colspan="1">Total Price: â‚¹<%= order.totals.grandTotal %></th>
                            <th colspan="2">
                                Status:
                                <select class="orderStatusDropdown" name="orderStatus_<%= order.orderID %>" data-orderid="<%= order.orderID %>" <%= order.status === 'delivered' ? 'disabled' : '' %>>
                                  <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                  <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                                  <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                  <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                </select>
                                <button type="submit">Update Status</button>
                              </th>
                              
                        </tr>
                    </thead>
                    <tbody>
                        <% order.products.forEach(product => { %>
                            <tr>
                                <td>Product Name:</td>
                                <td><%= product.product.name %></td>
                                <td>Quantity:</td>
                                <td><%= product.quantity %></td>
                            </tr>
                            <tr>
                                <td>Delivery Time:</td>
                                <td><%= order.deliveryTime %></td>
                                <td>Delivery Date:</td>
                                <td><%= order.deliveryDate %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% }); %>  
        </form>
        <div class="pagination">
            <a href="?page=<%= currentPage - 1 %>" class="<%= currentPage === 1 ? 'disabled' : '' %>">Previous</a>
            <% for (let i = 1; i <= 3; i++) { %>
                <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
            <% } %>
            <a href="?page=<%= currentPage + 1 %>" class="<%= currentPage === totalPages ? 'disabled' : '' %>">Next</a>
        </div>

        

       
