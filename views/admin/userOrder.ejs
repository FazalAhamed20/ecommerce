<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<!-- Update the existing script tag with the following code -->
<script>
    document.getElementById('orderStatusForm').addEventListener('submit', function (event) {
      event.preventDefault();
      openModal(); // Open the confirmation modal
    });
  
    function openModal() {
      const modal = document.getElementById('confirmationModal');
      const confirmBtn = document.getElementById('confirmBtn');
  
      // Show the modal
      modal.style.display = 'block';
  
      // Handle the confirm button click event
      confirmBtn.addEventListener('click', function () {
        closeModal(); // Close the modal
        submitForm(); // Submit the form
      });
    }
  
    function closeModal() {
      const modal = document.getElementById('confirmationModal');
      modal.style.display = 'none';
    }
  
    function submitForm() {
      const dropdowns = document.querySelectorAll('.orderStatusDropdown');
      const formData = [];
  
      dropdowns.forEach(dropdown => {
        formData.push({
          orderID: dropdown.getAttribute('data-orderid'),
          status: dropdown.value
        });
      });
  
      // Send formData to the server using AJAX (you can use fetch or any other library like axios)
      fetch('/updateOrderStatus', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData),
      })
        .then(response => response.json())
        .then(data => {
          console.log('Success:', data);
        })
        .catch((error) => {
          console.error('Error:', error);
        });
    }
  </script>
  
    

