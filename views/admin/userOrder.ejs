            text-align: center;
            animation: fadeInUp 1s ease-out;
        }

        .add-product-button,
        .edit-button,
        .delete-button {
            padding: 8px;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 8px;
        }

        .add-product-button {
            background-color: #45a049;
            color: black;
            text-decoration: none;
            border: none;
        }

        .edit-button,
        .delete-button {
            background-color: red;
