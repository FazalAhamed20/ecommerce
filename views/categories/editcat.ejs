<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="https://image.ibb.co/n5gUtm/icon_1.png"/>
    <title>Edit Category</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f9f9f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            color: #4CAF50;
            text-transform: uppercase;
            font-size: 24px;
            margin-bottom: 20px;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            box-sizing: border-box;
            max-width: 400px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label {
            margin: 10px 0;
            color: #555;
        }

        input {
            padding: 10px;
            margin: 8px 0;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
            width: 100%;
        }

        button {
            background-color: #4CAF50;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
            transition: background-color 0.3s ease-in-out;
        }

        button:hover {
            background-color: #45a049;
        }

        a {
            color: #4CAF50;
            text-decoration: none;
            display: block;
            margin-top: 15px;
            font-size: 14px;
            text-align: center;
        }
        .alert-container {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
            padding: 15px;
            border-radius: 5px;
            width: 300px;
            box-sizing: border-box;
            display: none;
            position: fixed;
            top: 54%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            text-align: center;
        }

        .alert-container p {
            margin-bottom: 10px;
        }

        .alert-container button {
            background-color: #dc3545;
            color: #fff;
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease-in-out;
        }

        .alert-container button:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>

<h1>Edit Category</h1>

<div class="alert-container" id="categoryAlert">
    <p id="alertMessage"></p>
    <button onclick="closeAlert()">OK</button>
</div>

<form action="/editcat/<%= category._id %>" method="post" onsubmit="return validateForm()">
    <label for="updatedName">Updated Category Name:</label>
    <input type="text" id="updatedName" name="updatedName" value="<%= category.name %>" >
    <button type="submit">Update Category</button>
</form>

<a href="/category">Back to Categories</a>

</body>
<script>
    function validateForm() {
      var categoryName = document.getElementById("updatedName").value;
      var alphabetPattern = /^[a-zA-Z]+$/;
      var alertContainer = document.getElementById("categoryAlert");
      var alertMessage = document.getElementById("alertMessage");
      if (categoryName.trim() === '') {
          alertMessage.textContent = "Category Name cannot be empty";
          showAlert();
          return false;
      } else if (!alphabetPattern.test(categoryName)) {
          alertMessage.textContent = "Category Name should only contain alphabets";
          showAlert();
          return false;
      }
  
      return true;
  }
  
  function showAlert() {
      var alertContainer = document.getElementById("categoryAlert");
      alertContainer.style.display = "block";
  }
  
  function closeAlert() {
      var alertContainer = document.getElementById("categoryAlert");
      alertContainer.style.display = "none";
  }
  </script>
</html>
